{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Cupping Compass application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        }
      },
      "required": ["id", "email", "name", "createdAt"]
    },
    "Evaluation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Evaluation",
      "type": "object",
      "description": "Represents a single coffee evaluation by a user.",
      "properties": {
        "coffeeName": {
          "type": "string"
        },
        "roastLevel": {
          "type": "string",
          "enum": ["light", "medium", "medium-dark", "dark"]
        },
        "overallScore": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "userId": {
          "type": "string"
        }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/evaluations/{evaluationId}": {
      "schema": {
        "$ref": "#/entities/Evaluation"
      },
      "description": "Stores individual evaluations for a user."
    }
  }
}
