{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Cupping Compass application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        }
      },
      "required": ["id", "email", "name", "createdAt"]
    },
    "CuppingSession": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Cupping Session",
      "type": "object",
      "description": "Represents a group cupping session.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the cupping session."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the session was created.",
          "format": "date-time"
        },
        "adminUid": {
          "type": "string",
          "description": "The UID of the user who created and administers the session."
        },
        "participantUids": {
          "type": "array",
          "description": "An array of UIDs of the users participating in the session.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["name", "createdAt", "adminUid", "participantUids"]
    },
    "Invitation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Invitation",
      "type": "object",
      "description": "Represents an invitation for a user to join a cupping session.",
      "properties": {
        "sessionId": {
          "type": "string",
          "description": "The ID of the cupping session."
        },
        "sessionName": {
          "type": "string",
          "description": "The name of the cupping session."
        },
        "invitedEmail": {
          "type": "string",
          "description": "Email address of the invited user.",
          "format": "email"
        },
        "invitedBy": {
          "type": "string",
          "description": "The UID of the administrator who sent the invitation."
        },
        "status": {
          "type": "string",
          "description": "The status of the invitation.",
          "enum": ["pending", "accepted", "rejected"]
        }
      },
      "required": ["sessionId", "sessionName", "invitedEmail", "invitedBy", "status"]
    },
    "Evaluation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Evaluation",
      "type": "object",
      "description": "Represents a single coffee evaluation by a user.",
      "properties": {
        "coffeeName": {
          "type": "string"
        },
        "roastLevel": {
          "type": "string",
          "enum": ["light", "medium", "medium-dark", "dark"]
        },
        "overallScore": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "userId": {
          "type": "string"
        }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores public profile information for each user."
    },
    "/sessions/{sessionId}": {
      "schema": {
        "$ref": "#/entities/CuppingSession"
      },
      "description": "Stores group cupping session data."
    },
    "/sessions/{sessionId}/evaluations/{evaluationId}": {
      "schema": {
        "$ref": "#/entities/Evaluation"
      },
      "description": "Stores individual evaluations submitted within a group session."
    },
    "/invitations/{invitationId}": {
      "schema": {
        "$ref": "#/entities/Invitation"
      },
      "description": "Stores invitations for users to join sessions."
    }
  }
}