/**
 * @fileoverview Firestore Security Rules for Cupping Compass.
 *
 * Core Philosophy:
 * This ruleset employs a mixed security model. User profiles are public.
 * Cupping sessions are invite-only, based on a participant list.
 * Invitations are used to manage access to cupping sessions, with listing restricted.
 *
 * Data Structure:
 * - /users/{userId}: Public user profiles.
 * - /sessions/{sessionId}: Cupping session data, with a list of participant UIDs.
 * - /sessions/{sessionId}/evaluations/{evaluationId}: Individual coffee evaluations within a session.
 * - /invitations/{invitationId}: Invitations for users to join sessions.
 *
 * Key Security Decisions:
 * - User profiles are publicly readable but only writable by the owner.
 * - Cupping sessions are accessible only to invited participants and the admin.
 * - Invitations are not listable. An alternative invite workflow will need to be created with lookup (get) instead of listing.
 *
 * Denormalization for Authorization:
 * - Cupping sessions denormalize participant UIDs directly onto the session document to avoid costly `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (get, list): Any user can read user profiles.
     * @allow (create, update, delete): Only the user with matching {userId} can modify their profile.
     * @deny Any user cannot create, update or delete another user's profile.
     * @principle Enforces document ownership for writes; allows public reads.
     */
    match /users/{userId} {
      allow get, list: if true;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.auth.uid == userId;
      allow delete: if isExistingOwner(userId) && request.auth.uid == userId;
    }

    /**
     * @description Controls access to cupping session data.
     * @path /sessions/{sessionId}
     * @allow (get): Only participants of the session can read the session data.
     * @allow (list): Listing sessions is disallowed to prevent leaking session IDs.
     * @allow (create): Only authenticated users can create sessions. The creator is automatically added as a participant.
     * @allow (update, delete): Only the admin of the session can modify or delete it.
     * @deny Non-participants cannot read, modify, or delete sessions.
     * @principle Enforces shared access via the participantUids array; restricts listing.
     */
    match /sessions/{sessionId} {
      allow get: if isSignedIn() && resource.data.participantUids.hasAny([request.auth.uid]);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.adminUid == request.auth.uid;
      allow update, delete: if isSessionAdmin(sessionId);
    }

    /**
     * @description Controls access to evaluations within a cupping session.
     * @path /sessions/{sessionId}/evaluations/{evaluationId}
     * @allow (get, list): Only participants of the parent session can read evaluations.
     * @allow (create): Only participants of the parent session can create evaluations.
     * @allow (update, delete): Only the user who created the evaluation can modify or delete it.
     * @deny Non-participants cannot access evaluations.
     * @principle Enforces shared access via the parent session's participantUids; enforces evaluation ownership.
     */
    match /sessions/{sessionId}/evaluations/{evaluationId} {
      allow get, list: if isSignedIn() && isSessionParticipant(sessionId);
      allow create: if isSignedIn() && isSessionParticipant(sessionId) && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid && isSessionParticipant(sessionId);
    }

    /**
     * @description Controls access to invitations to join cupping sessions.
     * @path /invitations/{invitationId}
     * @allow (get): Any authenticated user can retrieve a specific invitation by ID.
     * @allow (list): Listing invitations is explicitly denied.
     * @allow (create): Only session admins can create invitations.
     * @allow (update): Only the invited user can update the invitation status.
     * @allow (delete): Invitations cannot be deleted directly.
     * @deny Listing is not permitted.
     * @principle Restricts access to invitation creation to session admins; requires a get to use invitation. Denies list operation to stop sniffing.
     */
    match /invitations/{invitationId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.invitedBy == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/invitations/$(invitationId)).data.invitedEmail == request.auth.token.email;
      allow delete: if false;
    }

    // ---- Helper functions ----

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource based on the provided userId.
     * @param {string} userId - The user ID to compare against the authenticated user's UID.
     * @return {boolean} True if the authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

     /**
      * @description Checks if the authenticated user is the owner of an existing resource.
      * @param {string} userId - The user ID to compare against the authenticated user's UID.
      * @return {boolean} True if the authenticated user's UID matches the provided userId and the document exists.
      */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }


    /**
     * @description Checks if the authenticated user is the administrator of a cupping session.
     * @param {string} sessionId - The ID of the cupping session.
     * @return {boolean} True if the authenticated user's UID matches the session's adminUid.
     */
    function isSessionAdmin(sessionId) {
      return isSignedIn() && get(/databases/$(database)/documents/sessions/$(sessionId)).data.adminUid == request.auth.uid;
    }

    /**
     * @description Checks if the authenticated user is a participant in a cupping session.
     * @param {string} sessionId - The ID of the cupping session.
     * @return {boolean} True if the authenticated user's UID is in the session's participantUids array.
     */
    function isSessionParticipant(sessionId) {
      return isSignedIn() && get(/databases/$(database)/documents/sessions/$(sessionId)).data.participantUids.hasAny([request.auth.uid]);
    }
  }
}